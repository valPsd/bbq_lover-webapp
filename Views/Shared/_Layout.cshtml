<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BBQLover.webapp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BBQLover.webapp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #B4D3AA;">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
        <img src="~/images/BBQ Lover_round.png" class="img-fluid" width="60" height="60" style="margin-left: 20px;">
    </a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active" style="padding-right: 50px;">
          <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Reserve">การจอง</a>
        </li>
        <li class="nav-item" style="padding-right: 50px;">
          <a class="nav-link" asp-area="" asp-controller="Delivery" asp-action="Deliver">เดลิเวอรี่</a>
        </li>
        <li class="nav-item" style="padding-right: 50px;">
          <a class="nav-link" asp-area="" asp-controller="Table" asp-action="TableCheck">ตรวจสอบโต๊ะว่าง</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Menu" asp-action="MenuPage">แก้ไขเมนู</a>
        </li>
      </ul>
    </div>
  </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
